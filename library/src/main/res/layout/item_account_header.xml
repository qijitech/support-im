<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:padding="16dp"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/support_ui_sv_user_avatar"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_centerVertical="true"
      fresco:placeholderImage="@drawable/support_im_placeholder_avatar"
      fresco:placeholderImageScaleType="centerCrop"
      fresco:roundedCornerRadius="4dp"
      />

  <TextView
      android:id="@+id/support_ui_tv_user_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="20dp"
      android:layout_toRightOf="@id/support_ui_sv_user_avatar"
      android:gravity="center"
      android:maxLines="1"
      android:padding="8dp"
      android:textColor="#352E33"
      android:textSize="18sp"
      tools:text="航城聊天"
      />
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="6dp"
      android:scaleType="centerCrop"
      android:src="@drawable/icon_arrow_back_white"
      />


</RelativeLayout>