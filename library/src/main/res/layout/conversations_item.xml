<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    >
  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_support_im_conversations_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        fresco:placeholderImage="@drawable/support_im_placeholder_avatar"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        />
  </FrameLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="72dp"
      android:layout_marginStart="72dp"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/text_support_im_conversations_latest_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:lines="1"
          android:text="1h"
          style="@style/TextAppearance.AppCompat.Small"
          />
      <TextView
          android:id="@+id/text_support_im_conversations_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/text_support_im_conversations_name"
          android:layout_toStartOf="@id/text_support_im_conversations_name"
          android:ellipsize="end"
          android:lines="1"
          android:text="Tom"
          android:textColor="@android:color/black"
          style="@style/TextAppearance.AppCompat.Large"
          />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_support_im_conversations_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="交流交流"
        style="@style/TextAppearance.AppCompat.Medium"
        />
  </LinearLayout>

</FrameLayout>