<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <FrameLayout
      android:id="@+id/support_ui_contacts_checked_list_container"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:visibility="gone"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <support.ui.components.SupportButton
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/support_ui_contacts_button"
          android:layout_width="wrap_content"
          android:layout_height="38dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:gravity="center"
          android:minHeight="38dp"
          android:minWidth="80dp"
          android:text="确定"
          android:textColor="@color/white"
          android:textSize="@dimen/support_im_text_size_medium"
          app:supportButtonCornerRadius="2dp"
          app:supportButtonNormalColor="?attr/colorAccent"
          tools:text="发射"
          />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/support_ui_contacts_checklist"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toLeftOf="@id/support_ui_contacts_button"
          android:layout_toStartOf="@id/support_ui_contacts_button"
          android:visibility="visible"
          />
    </RelativeLayout>
  </FrameLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/support_ui_contacts_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/support_ui_contacts_checked_list_container"
      />

</RelativeLayout>
