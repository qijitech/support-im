<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <FrameLayout
      android:id="@+id/support_ui_contacts_checked_list_container"
      android:layout_width="match_parent"
      android:layout_height="56sp"
      android:layout_alignParentBottom="true"
      android:background="@color/white"
      android:visibility="gone"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <TextView
          android:id="@+id/support_ui_contacts_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_margin="4dp"
          android:background="@drawable/icon_button_choose"
          android:gravity="center"
          android:paddingBottom="4dp"
          android:paddingLeft="18dp"
          android:paddingRight="18dp"
          android:paddingTop="4dp"
          android:text="确定"
          android:textColor="@color/white"
          tools:text="发射"
          />
      <android.support.v7.widget.RecyclerView
          android:id="@+id/support_ui_contacts_checklist"
          android:layout_width="match_parent"
          android:layout_height="56dp"
          android:layout_toLeftOf="@id/support_ui_contacts_button"
          android:visibility="visible"
          />


    </RelativeLayout>
  </FrameLayout>

  <android.support.v7.widget.RecyclerView
      android:id="@+id/support_ui_contacts_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/support_ui_contacts_checked_list_container"
      />

</RelativeLayout>
