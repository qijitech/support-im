<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/container_support_im_chats_item_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_toLeftOf="@id/container_support_im_chats_item_content"
    android:layout_toStartOf="@id/container_support_im_chats_item_content"
    android:visibility="visible"
    >

  <ProgressBar
      android:id="@id/progress_support_im_chats_item_status"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_gravity="center"
      android:indeterminateDrawable="@drawable/loading_animation"
      android:indeterminateDuration="1500"
      />

  <TextView
      android:id="@id/text_support_im_chats_item_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="12sp"
      android:visibility="visible"
      tools:text="已发送"
      />

  <ImageView
      android:id="@+id/image_support_im_chats_item_error"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:src="@drawable/support_im_selector_chats_btn_fail"
      />
</FrameLayout>