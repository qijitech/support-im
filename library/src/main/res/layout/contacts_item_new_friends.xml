<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

  <FrameLayout
      android:layout_width="56dp"
      android:layout_height="match_parent"
      >
    <ImageView
        android:id="@+id/image_support_im_contacts_dummy_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/support_im_contacts_new_contact"
        />

    <TextView
        android:id="@+id/text_si_contacts_new_friends_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="2dp"
        android:background="@drawable/si_badge"
        android:padding="4dp"
        android:src="@drawable/support_im_contacts_new_contact"
        android:textColor="@android:color/white"
        android:textSize="@dimen/support_im_text_size_small"
        android:visibility="gone"
        tools:text="10"
        />
  </FrameLayout>

  <TextView
      android:id="@+id/text_support_im_contacts_dummy_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical|right"
      android:layout_marginLeft="72dp"
      android:layout_marginStart="72dp"
      android:lines="1"
      android:textColor="@color/material_grey_900"
      android:textSize="@dimen/abc_text_size_subhead_material"
      />
</FrameLayout>