<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

  <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/image_support_im_new_contacts_avatar"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_centerVertical="true"
      fresco:placeholderImage="@drawable/support_im_placeholder_avatar"
      fresco:placeholderImageScaleType="centerCrop"
      fresco:roundAsCircle="true"
      />

  <android.support.v7.widget.AppCompatButton
      android:id="@+id/btn_support_im_new_contacts_action"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:background="@drawable/support_im_primary_btn"
      android:elevation="0dp"
      android:gravity="center"
      android:lines="1"
      android:minHeight="36dp"
      android:minWidth="80dp"
      android:text="@string/support_im_add_request_agree"
      android:textColor="@color/support_im_primary_text"
      />

  <TextView
      android:id="@+id/text_support_im_new_contacts_nickname"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="72dp"
      android:layout_marginStart="72dp"
      android:layout_toLeftOf="@id/btn_support_im_new_contacts_action"
      android:layout_toStartOf="@id/btn_support_im_new_contacts_action"
      android:lines="1"
      android:textColor="@color/material_grey_900"
      android:textSize="@dimen/abc_text_size_subhead_material"
      />

</RelativeLayout>