<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <RelativeLayout
      xmlns:tools="http://schemas.android.com/tools"
      android:id="@+id/support_ui_content_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:foreground="?attr/selectableItemBackground"
      android:paddingBottom="4dp"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:paddingTop="4dp"
      >
    <TextView
        android:id="@+id/support_ui_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:paddingTop="8dp"
        android:text="群聊名称"
        android:textColor="#352E33"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/support_ui_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/icon_arrow_back_white"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="航城聊天"
        android:textColor="#7F7F7F"
        android:textSize="18sp"
        />
  </RelativeLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_below="@id/support_ui_content_container"
      android:background="#DBDBDB"
      />
</RelativeLayout>