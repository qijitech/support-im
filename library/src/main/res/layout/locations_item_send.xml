<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    >

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="12dp"
      android:src="@drawable/si_location_pin"
      />

  <TextView
      android:id="@+id/text_location_send_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="72dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="12dp"
      android:ellipsize="end"
      android:lines="1"
      android:text="Send your current location"
      android:textColor="#ff377aae"
      android:textSize="@dimen/support_im_text_size_medium"
      />

  <TextView
      android:id="@+id/text_location_send_accurate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="72dp"
      android:layout_marginRight="16dp"
      android:layout_marginTop="36dp"
      android:ellipsize="end"
      android:lines="1"
      android:text="Loading..."
      android:textColor="#ff999999"
      android:textSize="@dimen/support_im_text_size_xmedium"
      />

</FrameLayout>